{
  "compilerOptions": {
    "outDir": "lib",
    "module": "commonjs",
    "target": "es6",
    "lib": ["es6", "dom"],
    "sourceMap": true,
    "rootDir": "src",
    "noImplicitReturns": true,
    "noImplicitThis": false,
    "noImplicitAny": false,
    "strictNullChecks": true,
    "declaration": true,
    "stripInternal": true,
    "noUnusedLocals": true
  },
  "exclude": [
    "build",
    "tests"
  ],
  "types": [
    "typePatches"
  ]
}